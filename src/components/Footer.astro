    }

    .footer-bottom {
        border-top: 1px solid #edf2f7;
        padding: 2rem 0;
        color: #a0aec0;
        font-size: 0.8rem;
        flex-direction: column;
        gap: 1rem;
        text-align: center;
    }

    @media (min-width: 640px) {
        .footer-bottom {
            flex-direction: row;
            text-align: left;
        }
    }

    .bottom-links {
        display: flex;
        gap: 1.5rem;
        justify-content: center;
    }

