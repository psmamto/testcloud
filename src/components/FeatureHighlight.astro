<style>
    .feature-highlight {
        padding-top: 4rem;
        padding-bottom: 4rem;
    }

    .shadow-box {
        background: white;
        border-radius: 12px;
        box-shadow:
            0 10px 15px -3px rgba(0, 0, 0, 0.1),
            0 4px 6px -2px rgba(0, 0, 0, 0.05);
        overflow: hidden;
        flex-direction: column;
    }

    @media (min-width: 768px) {
        .shadow-box {
            flex-direction: row;
        }
    }

    .image-col {
        position: relative;
        flex: 1;
        width: 100%;
        height: 100%;
        min-height: 300px;
    }

    .image-col img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .badge {
        position: absolute;
        top: 1.5rem;
        left: 1.5rem;
        background-color: black;
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
        font-size: 0.75rem;
        font-weight: 700;
        z-index: 10;
    }

    .content-col {
        flex: 1;
        padding: 2.5rem;
    }

    h2 {
        font-size: 1.75rem;
        margin-bottom: 1.5rem;
        color: #1a202c;
    }

    .benefits {
        margin-bottom: 2rem;
    }

    .benefits li {
        display: flex;
        align-items: center;
        margin-bottom: 0.75rem;
        color: #4a5568;
        font-size: 0.95rem;
    }

    .check-icon {
        width: 1.25rem;
        height: 1.25rem;
        color: var(--color-primary);
        margin-right: 0.75rem;
    }

    .action-area {
        border-top: 1px solid #edf2f7;
        padding-top: 1.5rem;
        align-items: flex-end;
    }

    .price-info {
        display: flex;
        flex-direction: column;
    }

    .price {
        font-size: 1.5rem;
        font-weight: 700;
        color: #009fe3;
        line-height: 1;
    }

    .sub-price {
        font-size: 0.8rem;
        color: #718096;
    }

    .cta-wrapper {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
    }

    .note {
        font-size: 0.7rem;
        color: #718096;
        margin-top: 0.25rem;
    }
</style>
